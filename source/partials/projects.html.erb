<div class="wrapper-white">
  <div class="row">
    <div class="col-12">
      <div class="main-container" id="projects" style="margin-bottom: 0;background-color: transparent; padding-bottom: 0">
        <h2>Recent projects</h2>
      </div>
      <div class="cards" style="padding-top: 4px;">
        <% data.projects.each do |project| %>
          <div class="project-card">
            <div class="image-buffer">
              <div class="image-container" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path(project.image) %>)">
              </div>
            </div>
            <div class="card-description">
                <h5><%= project.name %></h5>
                <p><%= project.description %></p>
              </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
